{
  "name": "linter-spell-javascript",
  "main": "./lib/main",
  "version": "0.5.0",
  "description": "JavaScript spell checking using linter-spell.",
  "author": "Tarn Burton <twburton@gmail.com>",
  "keywords": [
    "javascript",
    "linter",
    "spell-check"
  ],
  "repository": "https://github.com/yitzchak/linter-spell-javascript",
  "license": "MIT",
  "engines": {
    "atom": ">=1.0.0"
  },
  "bugs": {
    "url": "https://github.com/yitzchak/linter-spell-javascript/issues"
  },
  "dependencies": {
    "lodash": "^4.13.0",
    "atom-package-deps": "^4.0.0"
  },
  "devDependecies": {
    "semver": "^5.3.0"
  },
  "package-deps": [
    "linter-spell"
  ],
  "activationHooks": [
    "language-javascript:grammar-used",
    "language-babel:grammar-used",
    "language-json:grammar-used"
  ],
  "standard": {
    "parser": "babel-eslint",
    "globals": [
      "atom",
      "latex",
      "afterEach",
      "beforeEach",
      "describe",
      "expect",
      "it",
      "jasmine",
      "runs",
      "spyOn",
      "waitsFor",
      "waitsForPromise"
    ]
  },
  "providedServices": {
    "linter-spell-grammar": {
      "versions": {
        "1.0.0": "provideGrammar"
      }
    }
  },
  "configSchema": {
    "checkComments": {
      "title": "Check Comments",
      "description": "Spell check in JavaScript comments.",
      "type": "boolean",
      "default": true,
      "order": 1
    }
  }
}
